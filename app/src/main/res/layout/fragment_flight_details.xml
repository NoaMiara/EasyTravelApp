<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.flight.FlightDetailsFragment">

    <EditText
        android:id="@+id/flight_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter flight number"
        android:autofillHints="" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/get_flight_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_flight_takeoff_24"
        android:contentDescription="get_flight_details"
        android:onClick="onClick" />


    <TextView
        android:id="@+id/flight_details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
